{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "types": ["node"],

    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "baseUrl": "../../..",
    "paths": {
      "celebrate-ui": ["packages/web/celebrate-ui/src/index"],
      "@celebrate-ui/build/config": ["packages/node/build/src/config.ts"],
      "@celebrate-ui/*": ["packages/web/*/src", "packages/node/*/src"]
    }
  }
}
